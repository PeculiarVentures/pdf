{
  "extends": "./tsconfig.compile.json",
  "compilerOptions": {
    "incremental": true,
    "importHelpers": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@peculiarventures/pdf-core": [
        "./packages/core/src"
      ],
      "@peculiarventures/pdf-cli": [
        "./packages/cli/src"
      ],
      "@peculiarventures/pdf-doc": [
        "./packages/doc/src"
      ],
      "@peculiarventures/pdf-font": [
        "./packages/font/src"
      ],
      "@peculiarventures/pdf-copy": [
        "./packages/copy/src"
      ],
    }
  },
  "exclude": [
    "packages/*/build",
    "packages/**/*/*.js"
  ]
}