{
  "extends": "./tsconfig.compile.json",
  "compilerOptions": {
    "incremental": true,
    "importHelpers": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@peculiarventures/pdf-core": [
        "./packages/core/src"
      ],
      "@peculiarventures/pdf-cli": [
        "./packages/cli/src"
      ],
      "@peculiarventures/pdf-doc": [
        "./packages/doc/src"
      ],
      "@peculiarventures/pdf-font": [
        "./packages/font/src"
      ],
      "@peculiarventures/pdf-copy": [
        "./packages/copy/src"
      ],
      "@peculiarventures/pdf-form-json": [
        "./packages/form-json/src"
      ],
      "@peculiarventures/pdf-repair": [
        "./packages/repair/src"
      ],
      "@peculiarventures/pdf-tests": [
        "./packages/tests/src"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "coverage",
    "packages/*/build",
    "packages/**/*/*.js",
    "packages/**/*/*.mjs",
    "eslint.config.mjs",
    "jest.config.js",
  ]
}