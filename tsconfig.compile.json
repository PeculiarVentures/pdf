{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
  }
}